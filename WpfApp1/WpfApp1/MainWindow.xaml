<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:obrazki="clr-namespace:MyImagesNS"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Layout" Height="500" Width="500" MinHeight="500" MinWidth="500">

    <Window.Resources>
        <ControlTemplate TargetType="{x:Type Button}" x:Key="ButtontemplateElipse">
            <Grid>
                <Ellipse Width="{TemplateBinding Width}" Height="{TemplateBinding Height}" Fill="Azure" />
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse Fill="Chartreuse" Width="30" Height="20"/>
                    <TextBlock>
                <ContentPresenter/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <StackPanel>
        <Button Width="100" Height="50" Template="{StaticResource ButtontemplateElipse}" Content="Test one" />
        <Button Width="50" Height="50" Template="{StaticResource ButtontemplateElipse}" Content="Test two" />
        <Button Width="100" Height="100" Template="{StaticResource ButtontemplateElipse}" Content="Test three"/>
    </StackPanel>
       
</Window>
