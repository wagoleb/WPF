<Window x:Class="ListBoxControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:komendacustomowa="clr-namespace:CustomCommandNM"
        Title="MainWindow" Height="300" Width="525">
    <Window.Resources>
        <Style TargetType="{x:Type Image}">
            <Setter Property="Width" Value="16" />
        </Style>
    </Window.Resources>
    <Window.CommandBindings>
        <!--
        <CommandBinding Command="Close" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed"/>
        -->
        <CommandBinding Command="komendacustomowa:CustomCommand.Exit" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed" />
        <CommandBinding Command="Help" CanExecute="CanExecuteHelpCommand" Executed="ExecutedHelpCommand" />
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_New" InputGestureText="CTRL+N" Command="New">
                    <MenuItem.Icon>
                        <Image Source="newFile.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Open" InputGestureText="CTRL+O" Command="Open">
                    <MenuItem.Icon>
                        <Image Source="openFile.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Save" InputGestureText="CTRL+S" Command="Save">
                    <MenuItem.Icon>
                        <Image Source="saveFile.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="E_xit" Command="komendacustomowa:CustomCommand.Exit">
                    <MenuItem.Icon>
                        <Image Source="exit.png" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="_Copy" Command="Copy">
                    <MenuItem.Icon>
                        <Image Source="copy.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Cu_t" Command="Cut">
                    <MenuItem.Icon>
                        <Image Source="cut.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="_Paste" Command="Paste">
                    <MenuItem.Icon>
                        <Image Source="paste.png" />
                    </MenuItem.Icon>
                </MenuItem>
                <Separator />
                <MenuItem Header="_Increase font" Command="IncreaseFontSize" />
            </MenuItem>
            <MenuItem Header="Tools">
                <MenuItem IsCheckable="True" Header="Zawijaj wiersze" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Command="Help" />
            </MenuItem>
        </Menu>
        <Button DockPanel.Dock="Bottom" Command="Copy" Content="Copy..." CommandTarget="{Binding ElementName=poleEdycji}" />
        <RichTextBox x:Name="poleEdycji">
        </RichTextBox>

    </DockPanel>
</Window>
