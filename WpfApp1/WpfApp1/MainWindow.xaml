<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Layout" Height="400" Width="600" MinHeight="500" MinWidth="500">
    <StackPanel Margin="1,1,1,1">

        <ListView SelectionMode="Extended" SelectionChanged="ListBox_SelectionChanged" x:Name="ListaImion">
            <ListView.View>
                <GridView>
                    <GridView.ColumnHeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </GridView.ColumnHeaderTemplate>
                    <GridView.ColumnHeaderContainerStyle>
                        <Style TargetType="{x:Type GridViewColumnHeader}">
                            <Setter Property="FontSize" Value="20" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Foreground" Value="Blue" />
                            <Setter Property="Padding" Value="5" />
                        </Style>
                    </GridView.ColumnHeaderContainerStyle>
                    <GridView.Columns>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=surName}">
                            <GridViewColumnHeader Click="LetsSortThisShit">
                                Nazwisko
                            </GridViewColumnHeader>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding Path=name}">
                            <GridViewColumnHeader Click="LetsSortThisShit">
                                Imię
                            </GridViewColumnHeader>
                        </GridViewColumn>
                        <GridViewColumn>
                            <GridViewColumnHeader Click="LetsSortThisShit">
                                Wiek
                            </GridViewColumnHeader>
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Path=age}" Foreground="Blue" TextDecorations="Underline" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Płeć" DisplayMemberBinding="{Binding Path=sex}" />
                    </GridView.Columns>
                </GridView>
            </ListView.View>
            <ListView.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Padding" Value="4" />
                    <Style.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsSelected" Value="True" />
                                <Condition Property="IsFocused" Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter Property="Foreground" Value="Red" />
                            <Setter Property="FontWeight" Value="Bold" />
                        </MultiTrigger>
                    </Style.Triggers>
                </Style>
            </ListView.ItemContainerStyle>
        </ListView>
        <WrapPanel>
            <Label>Imie:</Label>
            <TextBox Margin="1,1,1,1" Width="100" x:Name="noweImie"></TextBox>
            <Label>Nazwisko:</Label>
            <TextBox Margin="1,1,1,1" Width="100" x:Name="noweNazwisko"></TextBox>
            <Label>Plec:</Label>
            <TextBox Margin="1,1,1,1" Width="100" x:Name="nowaPlec"></TextBox>
            <Label>Wiek:</Label>
            <TextBox Margin="1,1,1,1" Width="100" x:Name="nowyWiek"></TextBox>
        </WrapPanel>
        <Button Margin="1,1,1,1" Click="Button_Click">Dodaj</Button>
        <Button Margin="1,1,1,1" Click="Button_Click_1">Usun</Button>
    </StackPanel>
</Window>
