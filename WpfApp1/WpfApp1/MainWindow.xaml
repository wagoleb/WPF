<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xaml="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Layout" Height="600" Width="900" MinHeight="500" MinWidth="500">
    <StackPanel>
        <ToggleButton IsChecked="{Binding ElementName=ankieta, Path=IsOpen}" x:Name="przelacznik" Margin="5">
            Pokaz ankiete
        </ToggleButton>
        <Popup x:Name="ankieta"  AllowsTransparency="True" PlacementTarget="{Binding ElementName=przelacznik}">
            <StackPanel>
                <GroupBox Margin="3">
                    <GroupBox.Header>
                        <Bold>Pytanie 1</Bold>
                    </GroupBox.Header>
                    <StackPanel>
                        <RadioButton>1 - 3</RadioButton>
                        <RadioButton>3 - 6</RadioButton>
                        <RadioButton>24h/d</RadioButton>
                    </StackPanel>
                </GroupBox>

                <GroupBox Margin="3">
                    <GroupBox.Header>
                        <Bold>Pytanie 2</Bold>
                    </GroupBox.Header>
                    <StackPanel>
                        <RadioButton>1 - 3</RadioButton>
                        <RadioButton>3 - 6</RadioButton>
                        <RadioButton>24h/d</RadioButton>
                        <RadioButton x:Name="more">
                            <WrapPanel>
                                <Label x:Name="start">Inne :</Label>
                                <Popup IsOpen="{Binding ElementName=more, Path=IsChecked}" Placement="Left" PlacementTarget="{Binding ElementName=start}" PopupAnimation="Fade" AllowsTransparency="True">
                                    <TextBox MinWidth="50"></TextBox>
                                </Popup>
                            </WrapPanel>
                        </RadioButton>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </Popup>
    </StackPanel>
</Window>
