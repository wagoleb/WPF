<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xaml="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Layout" Height="600" Width="900" MinHeight="500" MinWidth="500">
    <StackPanel>
        <GroupBox Header="Pytanie 1" Margin="3" FontWeight="Bold">
            <StackPanel>
                <RadioButton>1 - 3</RadioButton>
                <RadioButton>3 - 6</RadioButton>
                <RadioButton>24h/d</RadioButton>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Pytanie 2" Margin="3" FontWeight="Bold">
            <StackPanel>
                <RadioButton>1 - 3</RadioButton>
                <RadioButton>3 - 6</RadioButton>
                <RadioButton>24h/d</RadioButton>
                <RadioButton>
                    <WrapPanel>
                        <Label>Inne :</Label>
                        <TextBox MinWidth="50"></TextBox>
                    </WrapPanel>
                </RadioButton>
            </StackPanel>
        </GroupBox>
    </StackPanel>
</Window>
