<Window x:Class="ListBoxControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:multibinding="clr-namespace:multiBindingNS"
        Title="MainWindow" Height="300" Width="525"
        x:Name="windowName">
    <Window.Resources>
        <multibinding:PersonDatas x:Key="person" name="wojtek" age="{x:Null}" />
    </Window.Resources>
    <StackPanel>
        <TextBlock DataContext="{StaticResource person}">
            <TextBlock.Text>
                <MultiBinding StringFormat="Imię: {0}, Wiek: {1}">
                    <Binding Path="name" TargetNullValue="brak" />
                    <Binding Path="age" TargetNullValue="brak" />
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
    </StackPanel>
</Window>
