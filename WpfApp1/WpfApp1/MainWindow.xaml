<Window x:Class="ListBoxControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:multibinding="clr-namespace:multiBindingNS"
        Title="MainWindow" Height="300" Width="525"
        x:Name="windowName">
    <Window.Resources>
        <multibinding:PersonDatas x:Key="person" name="{x:Null}" age="39" />
    </Window.Resources>
    <StackPanel>
        <TextBlock DataContext="{StaticResource person}" Text="{Binding Path=name, StringFormat=Imie: {0}, TargetNullValue=nie podano}" />
    </StackPanel>
</Window>
